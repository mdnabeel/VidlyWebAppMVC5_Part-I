@model VidlyWebApp.ViewModel.RandomMovieViewModel
@{
    ViewBag.Title = "Random";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*
..............Implementation of Razor View.....................    
*@

@{ 
    var ViewClass = Model.Customer.Count > 3 ? "Popular" : null;
}
<h2 class=@ViewClass>@Model.Movie.MovieName</h2>


@if (Model.Customer.Count == 0)
{
    <p>No One Rented Any Movie</p>

}
else
{
    <ul>
        @foreach (var customer in Model.Customer)
        {
            <li>
                @customer.CustomerName;

            </li>
        }
    </ul>


}



